<div
  class="tab-pane fade <%= checkIncludes(url, 'password')? 'text-left show active' : '' %>"
  id="vert-tabs-profile"
  role="tabpanel"
  aria-labelledby="vert-tabs-profile-tab"
>
  <div class="group-field">
    <h5>Password</h5>
    <form action="" method="post">
      <div class="tab-pane_group">
        <span class="tab-pane_title">Old password</span>
        <div class="d-grid">
          <div class="col-9 px-0">
            <input
              class="tab-pane_password"
              name="oldPassword"
              type="password"
            />
          </div>
        </div>
      </div>
      <div class="tab-pane_group">
        <span class="tab-pane_title">New password</span>
        <div class="d-grid">
          <div class="col-9 px-0">
            <input
              class="tab-pane_password"
              name="newPassword"
              type="password"
            />
          </div>
        </div>
      </div>
      <div class="tab-pane_group">
        <span class="tab-pane_title">Confirm new password</span>
        <div class="d-grid">
          <div class="col-9 px-0">
            <input
              class="tab-pane_password"
              name="confirmPassword"
              type="password"
            />
          </div>
        </div>
      </div>
      <input type="hidden" name="csrfToken" value="<%= csrf.createToken() %>" />
      <input type="hidden" name="_method" value="PATCH" />
      <button type="submit" class="btn btn-update_password py-2 mt-3">
        Update password
      </button>
    </form>
  </div>
</div>
