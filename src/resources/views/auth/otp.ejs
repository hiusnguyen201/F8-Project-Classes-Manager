<div class="row d-flex justify-content-center">
  <div
    class="col-12 col-md-8 col-lg-6 col-xl-5 d-flex justify-content-center align-items-center px-0"
  >
    <div class="card card-verify-otp">
      <p class="text-center fw-bold form-title mb-3">VERIFY OTP</p>

      <% if(success?.length) {%>
      <div class="alert alert-success mb-4"><%= success %></div>
      <% } %> <% if(error?.length) {%>
      <div class="alert alert-danger mb-4"><%= error %></div>
      <% } %>
      <form action="" method="post" class="mt-3">
        <div class="inputfield">
          <input name="otp" type="number" maxlength="1" class="input" />
          <input name="otp" type="number" maxlength="1" class="input" />
          <input name="otp" type="number" maxlength="1" class="input" />
          <input name="otp" type="number" maxlength="1" class="input" />
          <input name="otp" type="number" maxlength="1" class="input" />
          <input name="otp" type="number" maxlength="1" class="input" />
          <input
            type="hidden"
            name="csrfToken"
            value="<%= csrf.createToken() %>"
          />
        </div>
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-submit btn-submit-otp">
            Submit
          </button>
        </div>
      </form>

      <div class="row">
        <div class="col-6">
          <a
            href="<%= redirectPath.LOGIN_AUTH %>"
            class="btn btn-submit w-100 btn-back-login"
            >Back To Login</a
          >
        </div>
        <div class="col-6">
          <button class="btn btn-submit w-100 btn-reset-form">Reset</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/assets/custom/javascripts/otp.js"></script>
