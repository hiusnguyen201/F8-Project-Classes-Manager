<form action="" method="post">
  <div
    class="pl-0 modal fade modal-edit <%= +modalUpdate === +users[i].id? 'show activeModal' : '' %>"
    id="modal-editChildren-<%= users[i].id %>"
    tabindex="-1"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header align-items-center">
          <h5 class="modal-title">
            <i
              class="fas fa-times mr-3 icon-operation"
              data-dismiss="modal"
            ></i>
            <i class="fas fa-book mr-2"></i><span>User</span>
          </h5>
          <button type="submit" class="btn btn-success py-2">Save</button>
        </div>
        <div class="modal-body">
          <div class="card-body mx-auto">
            <div class="card">
              <!-- Row 1 -->
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Name..."
                  autocomplete="off"
                  name="name"
                  value="<%= users[i].name %>"
                />
                <% if(errorsValidate?.length){ for(var i = 0; i <
                errorsValidate.length; i++) { if(errorsValidate[i]?.path ===
                'name') {%>
                <span class="text-danger"><%= errorsValidate[i]?.msg %></span>
                <% break;}}} %>
              </div>

              <!-- Row 2 -->
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  placeholder="Email..."
                  autocomplete="off"
                  name="email"
                  value="<%= users[i].email %>"
                />
                <% if(errorsValidate?.length){ for(var i = 0; i <
                errorsValidate.length; i++) { if(errorsValidate[i]?.path ===
                'email') {%>
                <span class="text-danger"><%= errorsValidate[i]?.msg %></span>
                <% break;}}} %>
              </div>

              <!-- Row 4 -->
              <div class="mb-3">
                <label class="form-label"
                  ><span>Phone</span
                  ><span class="optional-text">(optional)</span></label
                >
                <input
                  type="tel"
                  name="phone"
                  class="form-control"
                  placeholder="Phone..."
                  autocomplete="off"
                  value="<%= users[i].phone %>"
                />
                <% if(errorsValidate?.length){ for(var i = 0; i <
                errorsValidate.length; i++) { if(errorsValidate[i]?.path ===
                'phone') {%>
                <span class="text-danger"><%= errorsValidate[i]?.msg %></span>
                <% break;}}} %>
              </div>

              <!-- Row 5 -->
              <div class="mb-3">
                <label class="form-label"
                  ><span>Address</span
                  ><span class="optional-text">(optional)</span></label
                >
                <input
                  type="text"
                  name="address"
                  class="form-control"
                  placeholder="Address..."
                  autocomplete="off"
                  value="<%= users[i].address %>"
                />
                <% if(errorsValidate?.length){ for(var i = 0; i <
                errorsValidate.length; i++) { if(errorsValidate[i]?.path ===
                'address') {%>
                <span class="text-danger"><%= errorsValidate[i]?.msg %></span>
                <% break;}}} %>
              </div>

              <input
                type="hidden"
                name="csrfToken"
                value="<%= csrf.createToken() %>"
              />
              <input type="hidden" name="_method" value="PATCH" />
              <input type="hidden" name="userId" value="<%= users[i].id %>" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
